<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/collaboratorPhotoViewHeader"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo_unavailable" />

    <TextView
        android:id="@+id/collaboratorNameViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Collaborator Name"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/collaboratorPhotoViewHeader"
        app:layout_constraintStart_toEndOf="@+id/collaboratorPhotoViewHeader"
        app:layout_constraintTop_toTopOf="@+id/collaboratorPhotoViewHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>