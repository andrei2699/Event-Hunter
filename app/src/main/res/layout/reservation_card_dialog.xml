<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/eventNameReservationDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/event_name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventOrganizerReservationDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/organizer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventNameReservationDialog" />

    <TextView
        android:id="@+id/eventDateReservationDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/date"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventOrganizerReservationDialog" />

    <TextView
        android:id="@+id/realDateReservationDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/example_text"
        app:layout_constraintBottom_toBottomOf="@+id/eventDateReservationDialog"
        app:layout_constraintStart_toEndOf="@+id/eventDateReservationDialog"
        app:layout_constraintTop_toTopOf="@+id/eventDateReservationDialog" />

    <TextView
        android:id="@+id/eventLocationReservationDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/location"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventDateReservationDialog" />


    <TextView
        android:id="@+id/realLocationReservationDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/example_text"
        app:layout_constraintBottom_toBottomOf="@+id/eventLocationReservationDialog"
        app:layout_constraintStart_toEndOf="@+id/eventLocationReservationDialog"
        app:layout_constraintTop_toTopOf="@+id/eventLocationReservationDialog" />

    <TextView
        android:id="@+id/seatNumberReservationDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/seats_number"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventLocationReservationDialog" />

    <TextView
        android:id="@+id/selectedSeatNumberTextViewReservationDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/example_text"
        app:layout_constraintBottom_toBottomOf="@+id/seatNumberReservationDialog"
        app:layout_constraintStart_toEndOf="@+id/seatNumberReservationDialog"
        app:layout_constraintTop_toTopOf="@+id/seatNumberReservationDialog" />

    <SeekBar
        android:id="@+id/seatNumberSeekBarReservationDialog"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:max="10"
        android:min="1"
        android:progress="1"
        app:layout_constraintBottom_toBottomOf="@+id/selectedSeatNumberTextViewReservationDialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selectedSeatNumberTextViewReservationDialog"
        app:layout_constraintTop_toTopOf="@+id/selectedSeatNumberTextViewReservationDialog" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/collaborators"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seatNumberReservationDialog" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/collaboratorsRecyclerViewReservationDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>